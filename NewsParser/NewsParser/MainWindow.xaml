<Window x:Class="NewsParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsParser"
        xmlns:vm="clr-namespace:NewsParser.MVVM.ViewModels"
        Title="{Binding Title}"
        Height="650" Width="1200"
        Background="{StaticResource PrimariBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0">

            <ListBox Background="{StaticResource SecondaryBrush}"
                      ItemsSource="{Binding SourceCollection}"
                      DisplayMemberPath="Name"
                      FontSize="18"
                      HorizontalContentAlignment="Center"
                     SelectedIndex="0"
                      SelectedItem="{Binding SelectedSource}"/>


            
        </Border>

        <ListBox Grid.Column="1"
                 Background="Transparent"
                 ItemsSource="{Binding SelectedSource.News}">
            <ListBox.ItemTemplate> 
                <DataTemplate>
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0">
                            <Hyperlink NavigateUri="{Binding Url}"
                                       RequestNavigate="Hyperlink_RequestNavigate">click
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock Grid.Row="1" Text="{Binding Text}" TextWrapping="Wrap" MaxWidth="600"/>
                        
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <GridSplitter Width="3"/>
    </Grid>
    
</Window>
